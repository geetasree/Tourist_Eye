<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="700px"
        android:layout_height="50px"
        android:textSize="18sp"
        android:textColor="@color/cardview_dark_background"
        android:id="@+id/txtEventNameAdp"/>

    <TextView
        android:layout_width="350px"
        android:layout_height="50px"
        android:textSize="14sp"
        android:id="@+id/txtEventDateFromAdp"
        android:layout_below="@id/txtEventNameAdp"/>
    <TextView
        android:layout_width="350px"
        android:layout_height="50px"
        android:textSize="14sp"
        android:id="@+id/txtEventDateToAdp"
        android:layout_toRightOf="@+id/txtEventDateFromAdp"
        android:layout_below="@+id/txtEventNameAdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:textSize="14sp"
        android:id="@+id/txtEventBudgetAdp"
        android:layout_below="@+id/txtEventDateToAdp"/>

</RelativeLayout>
